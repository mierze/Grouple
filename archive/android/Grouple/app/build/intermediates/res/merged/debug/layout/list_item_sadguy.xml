<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sadGuyGridLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:orientation="vertical" >

  	<ImageView
  	    android:layout_marginTop="50dp"
        android:id="@+id/sadGuyImageView"
        android:textStyle="bold"
        android:src="@drawable/icon_sadguy"
        android:contentDescription="Sad Guy"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="100dp"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_margin="10dp"
        />
  	
  	<TextView
  	    android:id="@+id/sadGuyTextView"
  	    android:layout_marginTop="-80dp"
  	    android:layout_gravity="center" 
  	    android:textSize="16sp"
  	    android:paddingBottom="200dp"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:gravity="center"
  	    android:textColor="@color/white"
  	    android:text="You do not have any friend requests."
  	    />

</LinearLayout>
