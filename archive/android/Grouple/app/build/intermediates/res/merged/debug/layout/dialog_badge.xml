<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/badgeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:gravity="center"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/badgeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Jack of all Trades"
        android:textColor="@color/button_text_color"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/badgeImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxHeight="400dp"
        android:minHeight="300dp"
        android:layout_marginRight="40dp"
        android:layout_weight="2"
        android:layout_marginLeft="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border_layout"
        android:contentDescription="Badge"
        android:src="@drawable/image_default" />

    <TextView
        android:id="@+id/badgeAboutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_gravity="center"
        android:text="This badge is bla bla bla, you earn it through getting out and participating in events of all different categories, blab bla more info, stuff here."
        android:textColor="@color/button_text_color"
        android:textSize="14sp" />

</LinearLayout><!-- From: file:/Users/brett/Documents/Mierzelancing/Workspaces/grouple-workspace/Grouple/app/src/main/res/layout/dialog_badge.xml -->