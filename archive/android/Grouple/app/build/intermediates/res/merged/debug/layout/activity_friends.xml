<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	android:id="@+id/friendsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
	android:background="@color/background_color" >

  	<LinearLayout
	    android:id="@+id/groupsLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:gravity="center"
	    android:orientation="vertical" >
	    
		<Button
		    android:id="@+id/addFriendButtonFA"
		    android:layout_width="match_parent"
		    android:layout_height="80dp"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="5dp"
		    android:background="@drawable/selector_button"
		    android:fontFamily="sans-serif-condensed"
		    android:onClick="startFriendAddActivity"
		    android:text="Add Friend"
		    android:textColor="@color/button_text_color"
		    android:textSize="20sp" />
	
		<Button
		    android:id="@+id/currentFriendsButtonFA"
		    android:layout_width="match_parent"
		    android:layout_height="80dp"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="5dp"
		    android:background="@drawable/selector_button"
		    android:fontFamily="sans-serif-condensed"
		    android:onClick="startFriendsCurrentActivity"
		    android:text="My Friends"
		    android:textColor="@color/button_text_color"
		    android:textSize="20sp" />
	
		<Button
		    android:id="@+id/friendRequestsButtonFA"
		    android:layout_width="match_parent"
		    android:layout_height="80dp"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="5dp"
		    android:background="@drawable/selector_button"
		    android:fontFamily="sans-serif-condensed"
		    android:onClick="startFriendRequestsActivity"
		    android:text="Friend Requests"
		    android:textColor="@color/button_text_color"
		    android:textSize="20sp" />
	</LinearLayout>
</LinearLayout><!-- From: file:/Users/brett/Documents/Mierzelancing/Workspaces/grouple-workspace/Grouple/app/src/main/res/layout/activity_friends.xml -->