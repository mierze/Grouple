<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deleteAccount_layout" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:background="@color/background_color"
    android:gravity="center"
    android:padding="5dp">

    <ScrollView
        android:id="@+id/scrollViewDeleteAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="0dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

             <EditText
        android:id="@+id/passwordOldTextDAD"
                android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailEditTextRA"
        android:layout_marginBottom="3dp"
                android:textColorHint="@color/hint_text_color"
        android:layout_alignRight="@+id/emailEditTextRA"
        		android:fontFamily="sans-serif"
        	
		android:textColor="@color/text_color"
        android:layout_below="@+id/emailEditTextRA"
        android:ems="10"
        android:hint="Enter current password"
        android:inputType="textPassword" />

            
              <Button
        android:id="@+id/confirmButtonDAD"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_purple"
        android:fontFamily="sans-serif-condensed"
        android:onClick="ConfirmDeleteAccountButton"
        android:text="Delete Account"
        android:textColor="@color/button_text_color" />
            
        </LinearLayout>
    </ScrollView>

   
</LinearLayout>
