<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deleteEventLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp" >

    <ScrollView
        android:id="@+id/deleteEventscrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/instructionsFPD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp"
                android:layout_row="0"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:padding="5dp"
                android:text="Are you sure you wish to delete this event? All participants will be removed from the event and the event will be deleted entirely. Enter 'Yes' to delete, 'No' or back to exit."
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/confirmEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:hint="&apos;Yes&apos; / &apos;No&apos;"
                android:inputType="textCapWords"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_text_color" />

            <Button
                android:id="@+id/confirmDeleteButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_purple"
                android:fontFamily="sans-serif-condensed"
                android:onClick="RequestResetCodeButton"
                android:text="Confirm Delete"
                android:textColor="@color/button_text_color" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/brett/Documents/Mierzelancing/Workspaces/grouple-workspace/Grouple/app/src/main/res/layout/dialog_delete_event.xml -->