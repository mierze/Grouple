<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/top_bottom_border"
    android:onClick="startMessages"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/messageInnerLayout1"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="0dp" >

        <ImageButton
            android:id="@+id/contactImage"
            android:layout_width="90dp"
            android:scaleType="fitXY"
            android:layout_height="90dp"
            android:layout_gravity="left"
           	android:adjustViewBounds="true"
           	android:cropToPadding="true"
            android:layout_margin="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:contentDescription="Profile photo."
            android:gravity="center"
            android:padding="2dp"
         />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageInnerLayout2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="2"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/contactName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="sans-serif"
            android:gravity="top|left"
            android:onClick="startProfileActivity"
            android:text="Todd Feipel"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messageBody"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:layout_marginBottom="2dp"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:maxLines="2"
            android:text="This isksdj adfkjalkjdsfj aljdflkajfl lajdfslaj flajdl;fj;"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/messageDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:fontFamily="sans-serif-light"
            android:gravity="bottom|right"
            android:text="9:00 pm"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/brett/Documents/Mierzelancing/Workspaces/grouple-workspace/Grouple/app/src/main/res/layout/list_row_contact.xml -->