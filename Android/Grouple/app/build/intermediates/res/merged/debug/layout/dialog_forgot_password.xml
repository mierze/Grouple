<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forgetpassword_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp" >

    <ScrollView
        android:id="@+id/scrollViewForgetPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/instructionsFPD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp"
                android:layout_row="0"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:padding="5dp"
                android:text="To reset your password, type your email in the box below and then hit the &apos;Request Reset By Email&apos; Button.  Then check your email for a &apos;Reset Code&apos; from Grouple."
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/confirmEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Enter email of your account"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_text_color" />

            <Button
                android:id="@+id/confirmDeleteButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_purple"
                android:fontFamily="sans-serif-condensed"
                android:onClick="RequestResetCodeButton"
                android:text="Request Reset By Email"
                android:textColor="@color/button_text_color" />

            <EditText
                android:id="@+id/resetCodeFPD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Enter Reset Code"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_text_color" />

            <Button
                android:id="@+id/confirmFPD"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_purple"
                android:fontFamily="sans-serif-condensed"
                android:onClick="ConfirmResetCodeButton"
                android:text="Confirm Reset Code"
                android:textColor="@color/button_text_color" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/brett/Documents/Mierzelancing/Workspaces/grouple-workspace/Grouple/app/src/main/res/layout/dialog_forgot_password.xml -->