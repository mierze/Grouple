<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="5dp" >

    <ScrollView
        android:id="@+id/eventScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="2"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/eventLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eventImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/image_background_color"
                android:cropToPadding="true"
                android:maxHeight="400dp"
                android:minHeight="100dp"
                android:minWidth="300dp"
                android:onClick="loadImage"
                android:padding="3dp"
                 />

            <TextView
                android:id="@+id/aboutTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:padding="5dp"
                android:text="About Event:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/aboutTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_layout"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:padding="10dp"
                android:text="This is a group profile."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/attendingButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="attendingButton"
                android:text="Attending"
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/messagesButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="messagesButton"
                android:text="Event Messages"
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/checklistButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="checklistButton"
                android:text="Item Checklist"
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/joinButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="joinButton"
                android:text="Join Event"
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/inviteButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_button"
                android:fontFamily="sans-serif-condensed"
                android:onClick="inviteButton"
                android:text="Invite Groups"
                android:textColor="@color/button_text_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_yellow"
                android:fontFamily="sans-serif-condensed"
                android:onClick="editButton"
                android:text="Edit Event"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/brett/Documents/Mierzelancing/Workspaces/grouple-workspace/Grouple/app/src/main/res/layout/activity_event_profile.xml -->